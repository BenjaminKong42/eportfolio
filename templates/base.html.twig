{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Eportfolio{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
    <style>
        :root{
            --bg: #0f172a;        /* slate-900 */
            --panel: #111827ee;   /* gray-900 */
            --text: #e5e7eb;      /* gray-200 */
            --accent: #60a5fa;    /* blue-400 */
            --accent2:#fbbf24;    /* amber-400 */
        }
        *{box-sizing:border-box}
        html,body{height:100%}
        body{
            margin:0;
            font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif;
            color: var(--text);
            background:
              radial-gradient(1200px 600px at 10% -20%, #1e3a8a 10%, transparent 60%),
              radial-gradient(1000px 600px at 90% 120%, #0ea5e9 10%, transparent 60%),
              linear-gradient(135deg, #0b1020, var(--bg));
        }
        a{color:var(--accent);text-decoration:none}
        a:hover{color:#93c5fd}
        .wrapper{max-width:1100px;margin:0 auto;padding:24px}
        header{
            display:flex;align-items:center;justify-content:space-between;
            padding:18px 0;margin-bottom:10px
        }
        .brand{display:flex;gap:12px;align-items:center}
        .logo{
            width:42px;height:42px;border-radius:12px;
            background:linear-gradient(145deg, #60a5fa, #06b6d4);
            box-shadow:0 6px 16px #0006;
        }
        nav{display:flex;gap:16px;flex-wrap:wrap}
        nav a{padding:8px 12px;border-radius:10px;background:#111827cc}
        nav a.active{background:#1f2937;color:#fff}
        .panel{
            background: var(--panel);
            border: 1px solid #1f2937;
            border-radius: 18px;
            box-shadow: 0 16px 40px #0008;
            padding: 24px;
            margin: 16px 0;
        }
        h1,h2{margin:0 0 14px}
        .grid{
            display:grid;
            grid-template-columns: repeat(auto-fit,minmax(260px,1fr));
            gap:16px
        }
        .pill{display:inline-block;padding:6px 10px;border:1px solid #334155;border-radius:999px;margin:4px 6px 0 0}
        footer{margin:28px 0 8px;color:#94a3b8;font-size:0.95em}
        .cta{
            display:inline-flex;align-items:center;gap:10px;
            padding:10px 14px;border-radius:12px;
            background:linear-gradient(90deg, var(--accent), var(--accent2));
            color:#0b1020;font-weight:600;box-shadow:0 10px 20px #0006
        }
    </style>
    {% endblock %}
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="brand">
                <div class="logo"></div>
                <div>
                    <strong>Eportfolio</strong><br>
                    <span style="color:#93c5fd">Symfony + Twig</span>
                </div>
            </div>
            <nav>
                <a href="{{ path('app_home') }}" class="{% if app.request.get('_route') == 'app_home' %}active{% endif %}">Accueil</a>
                <a href="{{ path('kong_home') }}" class="{% if app.request.get('_route') == 'kong_home' %}active{% endif %}">Kong</a>
                <a href="#projects">Projets</a>
                <a href="#skills">Compétences</a>
                <a href="#contact">Contact</a>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer>
            © {{ "now"|date("Y") }} · Eportfolio · Fait avec Symfony 7 & Twig
        </footer>
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>
